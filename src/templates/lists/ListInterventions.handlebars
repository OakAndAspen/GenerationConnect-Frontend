<form class="form-inline mb-3 d-flex">
    <div class="form-check mr-2 ml-auto">
        <input class="form-check-input" name="statut" type="radio" id="statutTous" value="" checked>
        <label class="form-check-label" for="statutTous">Tous</label>
    </div>
    <div class="form-check mr-2">
        <input class="form-check-input" name="statut" type="radio" id="statutPlanifie" value="planifie">
        <label class="form-check-label" for="statutPlanifie">Planifié</label>
    </div>
    <div class="form-check mr-2">
        <input class="form-check-input" name="statut" type="radio" id="statutAnnule" value="annule">
        <label class="form-check-label" for="statutAnnule">Annulé</label>
    </div>
    <div class="form-check mr-2">
        <input class="form-check-input" name="statut" type="radio" id="statutFinalise" value="finalise">
        <label class="form-check-label" for="statutFinalise">Finalisé</label>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Junior</th>
        <th>Date</th>
        <th>Statut</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each interventions}}
        <tr>
            <td><a href="#admin/junior/{{user.id}}">{{user.prenom}} {{user.nom}}</a></td>
            <th>{{debutprevu}}</th>
            <th>{{statut}}</th>
            <td class="text-right">
                <a href="#admin/interventions/{{id}}" class="btn" title="Voir le détail"><i class="fas fa-eye"></i> Voir</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
