<h1>{{coordonnees.prenom}} {{coordonnees.nom}}</h1>
<h1>Mes coordonnées</h1>
<div class="row">
    <div class="col-12">
        <input type="text" class="form-control mb-2" placeholder="N° de téléphone" value="{{coordonnees.noMobile}}">
    </div>
    <div class="col-md-6">
        <b>Adresse de facturation</b>
        <input type="text" class="form-control mb-2" placeholder="Adresse">
        <input type="text" class="form-control mb-2" placeholder="NPA">
        <input type="text" class="form-control mb-2" placeholder="Localité">
    </div>
    <div class="col-md-6">
        <b>Adresse d'habitation courante (pour la localisation)</b>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label">Même adresse que pour la facturation</label>
        </div>
        <input type="text" class="form-control mb-2" placeholder="Adresse">
        <input type="text" class="form-control mb-2" placeholder="NPA">
        <input type="text" class="form-control mb-2" placeholder="Localité">
    </div>
</div>

<hr/>

<h1>Mes disponibilités</h1>
<table id="disponibilites" class="table table-striped">
    <tbody>
    {{#each plagesHoraire}}
    <tr>
        <th>{{jour}}</th>
        <td>
                <span class="badge badge-warning">
                    {{heureDebut}} - {{heureFin}}
                    <a href="#" title="Supprimer"><i class="fas fa-times"></i></a>
                </span>
            <a href="#" title="Ajouter une plage horaire"><i class="fas fa-plus"></i></a>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>

<hr/>

<h1>Mes compétences</h1>

<div class="row my-3">
    <div class="col-12">
        {{#each competences}}
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label">{{titre}}</label>
        </div>
        {{/each}}
    </div>
</div>



