<h1>Nouvelle demande d'intervention</h1>
<hr/>
<form>
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="my-3">Matière concernée</h2>
                {{#each sujets}}
                    <label class="form-check-label" for="sujet">
                        <h2>{{nom}}</h2>
                    </label>
                    {{#each this.matieres}}
                        <div class="form-check my-2">
                            <input class="form-check-input" type="radio" name="matiereRadio" id="sujet{{id}}"
                                   value="{{id}}">
                            <label class="form-check-label" for="sujet">
                                <h3>{{nom}}</h3> {{description}}
                            </label>
                        </div>
                    {{/each}}
                {{/each}}
            </div>
            <div class="col">
                <div class="form-group">
                    <h2 class="my-3">Type de demande</h2>
                    <select class="form-control" id="type">
                        <option value="unique">Unique</option>
                        <option value="repetitif">Repetitive</option>
                    </select>
                </div>

                <hr/>

                <h2 class="my-3">Date et heure</h2>
                <div class="form-group form-inline">
                    <label class="form-text mr-3 mb-3" for="dateJour">Date</label>
                    <input class="ml-2 form-control" type="date" name="date" id="dateJour"></p>
                </div>
                <div class="form-group form-inline">
                    <label class="form-text mr-3 mb-3" for="dateDebut">Heure de début</label>
                    <input class="ml-2 form-control" type="time" name="heuredebut" id="heuredebut">
                </div>
                <div class="form-group form-inline">
                    <label class="form-text mr-3 mb-3" for="dateFin">Heure de fin</label>
                    <input class="ml-2 form-control" type="time" name="heurefin" id="heurefin">
                </div>

                <hr/>

                <h2 class="my-3">Commentaire</h2>
                <textarea class="form-control mb-5" placeholder="Description de votre demande"
                          id="commentaire"></textarea>
            </div>
        </div>
    </div>
    <button type="button" class="form-control btn mb-3" id="send">Envoyer la demande</button>
</form>

<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Succès</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                La demande a bien été envoyée !
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="errorsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Erreur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                La demande n'a pas été envoyé. Une erreur a été rencontré.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>