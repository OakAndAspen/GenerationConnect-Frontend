<h1>{{prenom}} {{nom}} <span class="badge badge-secondary ml-2">{{junior.status}}</span></h1>
<hr/>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="profil-tab" data-toggle="tab" href="#profil" role="tab" aria-controls="profil" aria-selected="true">Coordonnées</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="dispo-tab" data-toggle="tab" href="#dispo" role="tab" aria-controls="dispo" aria-selected="false">Disponibilités</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="comp-tab" data-toggle="tab" href="#comp" role="tab" aria-controls="comp" aria-selected="false">Compétences</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active my-3" id="profil" role="tabpanel" aria-labelledby="profil-tab">
        <!--<h1>Mes coordonnées</h1>-->
        <div class="mt-3 px-3 form-row align-items-center" data-id="{{id}}">
            <div class="col-auto">
                <label>N° de téléphone</label>
                <input type="text" class="form-control mb-2" placeholder="+41 XX XXX XX XX" value="{{telephone}}">
            </div>
            <div class="col-auto">
                <label>Adresse email</label>
                <input type="text" class="form-control mb-2" placeholder="Adresse mail" value="{{email}}">
            </div>
            <div class="col-auto">
                <label>N° AVS</label>
                <input type="text" class="form-control mb-2" placeholder="N° AVS" value="{{junior.NoAVS}}">
            </div>

        </div>

        <div class="row mt-3 px-3" data-id="{{id}}">
            <div class="col-md-6 mt-3">
                <div class="card" data-id="{{id}}">
                    <div class="card-header">Informations bancaires</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label >Nom</label>
                            <input type="text" class="form-control mb-2" placeholder="Nom" value="{{junior.BanqueNom}}">
                        </div>
                        <div class="form-group">
                            <label>N° BIC</label>
                            <input type="text" class="form-control mb-2" placeholder="BIC" value="{{junior.BanqueBIC}}">
                        </div>
                        <div class="form-group">
                            <label>N° IBAN</label>
                            <input type="text" class="form-control mb-2" placeholder="CHXX XXXX XXXX XXXX XXXX X" value="{{junior.BanqueIBAN}}">
                        </div>
                    </div>
                </div>
            </div>

            {{#with junior.adresse_de_facturation}}
            <div class="col-md-6 mt-3">
                <div class="card" data-id="{{id}}">
                    <div class="card-header">
                        Adresse de facturation
                    </div>
                    <div class="card-body">
                        <label >Adresse</label>
                        <input type="text" class="form-control mb-2" placeholder="Ligne 1" value="{{ligne1}}">
                        <input type="text" class="form-control mb-2" placeholder="Ligne 2" value="{{ligne2}}">
                        <input type="text" class="form-control mb-2" placeholder="Ligne 3" value="{{ligne3}}">
                        <label >Ville</label>
                        <input type="text" class="form-control mb-2" placeholder="Ville" value="{{ville}}">
                        <label >NPA</label>
                        <input type="text" class="form-control mb-2" placeholder="NPA" value="{{npa}}">
                    </div>
                </div>
            </div>
            {{/with}}
            {{#with junior.adresse_de_depart}}
            <div class="col-md-6 mt-3">
                <div class="card" data-id="{{id}}">
                    <div class="card-header">
                        Adresse de départ
                    </div>
                    <div class="card-body">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="depart">
                            <label class="form-check-label" for="depart"><h4>Même adresse qu'habitation courante</h4></label>
                        </div>
                        <label >Adresse</label>
                        <input type="text" class="form-control mb-2" placeholder="Ligne 1" value="{{ligne1}}">
                        <input type="text" class="form-control mb-2" placeholder="Ligne 2" value="{{ligne2}}">
                        <input type="text" class="form-control mb-2" placeholder="Ligne 3" value="{{ligne3}}">
                        <label >Villa</label>
                        <input type="text" class="form-control mb-2" placeholder="Ville" value="{{ville}}">
                        <label >NPA</label>
                        <input type="text" class="form-control mb-2" placeholder="NPA" value="{{npa}}">
                    </div>
                </div>
            </div>
            {{/with}}
            {{#with adresse_habitation}}
            <div class="col-md-6 mt-3">
                <div class="card" data-id="{{id}}">
                    <div class="card-header">
                        Adresse d'habitation courante
                    </div>
                    <div class="card-body">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="habitation">
                            <label class="form-check-label" for="habitation"><h4>Même adresse que pour la facturation</h4></label>
                        </div>
                        <label >Adresse</label>
                        <input type="text" class="form-control mb-2" placeholder="Ligne 1" value="{{ligne1}}">
                        <input type="text" class="form-control mb-2" placeholder="Ligne 2" value="{{ligne2}}">
                        <input type="text" class="form-control mb-2" placeholder="Ligne 3" value="{{ligne3}}">
                        <label >Villa</label>
                        <input type="text" class="form-control mb-2" placeholder="Ville" value="{{ville}}">
                        <label >NPA</label>
                        <input type="text" class="form-control mb-2" placeholder="NPA" value="{{npa}}">
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>


    <div class="tab-pane fade  mt-3" id="dispo" role="tabpanel" aria-labelledby="dispo-tab">

        <!--<h1>Mes disponibilités</h1>-->

        <div class="row mb-2">
            <div class="col-3">
                <select class="form-control" id="jour" >
                    <option>Choisir...</option>
                    <option>Lundi</option>
                    <option>Mardi</option>
                    <option>Mercredi</option>
                    <option>Jeudi</option>
                    <option>Vendredi</option>
                </select>
            </div>
            <div class="col-4">
                <input type="time" class="form-control mb-2" placeholder="Début" id="heureDebut">
            </div>
            <div class="col-4">
                <input type="time" class="form-control mb-2" placeholder="Fin" id="heureFin">
            </div>
            <div class="col-1">
                <button type="button" class="btn btn-success fas fa-plus btn-green" id="addDispo"></button>
            </div>

        </div>
        <div class="row" id="listDispo">
            <div class="col-12" style="" id="tableDispo">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Jour</th>
                        <th>Début</th>
                        <th>Fin</th>
                    </tr>
                    </thead>
                    <tbody id="tbody">
                    {{#each junior.plageshoraires}}
                        <tr>
                            <td>
                                <div class="col-1">
                                    <button style="" type="button" class="btn btn-danger fas fa-minus btn-red"></button>
                                    <style>
                                        .btn-red {
                                            background-color:red !important;
                                        }
                                        .btn-green {
                                            background-color:forestgreen !important;
                                        }
                                    </style>
                                </div>
                            </td>
                            <td>{{joursemaine}}</td>
                            <td>{{heuredebut}}</td>
                            <td>{{heurefin}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="tab-pane fade mt-3" id="comp" role="tabpanel" aria-labelledby="comp-tab">
        <!--<h1>Mes compétences</h1>-->

        <div class="row my-3">
            <div class="col-12">
            <ul class="list-group">
                {{#each junior.matieres}}
                    <div class="form-check my-2">
                        <input class="form-check-input" type="checkbox" name="matiereRadio" id="sujet{{id}}"
                               value="{{id}}" checked>
                        <label class="form-check-label" for="sujet">
                            <h3>{{nom}}</h3> {{description}}
                        </label>
                    </div>
                {{/each}}
            </ul>
            </div>
        </div>

    </div>
</div>


