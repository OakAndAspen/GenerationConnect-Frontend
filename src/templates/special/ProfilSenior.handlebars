<h1>{{prenom}} {{nom}}</h1>
<hr/>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="profil-tab" data-toggle="tab" href="#profil" role="tab" aria-controls="profil" aria-selected="true">Coordonnées</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="comp-tab" data-toggle="tab" href="#comp" role="tab" aria-controls="comp" aria-selected="false">Sujets</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active my-3" id="profil" role="tabpanel" aria-labelledby="profil-tab">
        <div class="mt-3 px-3 form-row align-items-center" data-id="{{id}}">
            <div class="col-auto">
                <label>N° de téléphone</label>
                <input type="text" class="form-control mb-2" placeholder="+41 XX XXX XX XX" value="{{telephone}}">
            </div>
            <div class="col-auto">
                <label>Adresse email</label>
                <input type="text" class="form-control mb-2" placeholder="Adresse mail" value="{{email}}">
            </div>
            <div class="col-auto">
                <label>Préférence de contact</label>
                <input type="text" class="form-control mb-2" placeholder="preference" value="{{senior.preference}}">
            </div>

        </div>

        <div class="row mt-3 px-3">
            <div class="col-md-6 mt-3">
                {{#with senior.forfait}}
                <div class="card" data-id="{{senior.id}}">
                    <div class="card-header">Forfait</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label >Nom</label>
                            <input type="text" class="form-control mb-2" placeholder="Nom" value="{{nom}}">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <input type="text" class="form-control mb-2" placeholder="BIC" value="{{description}}">
                        </div>
                        <div class="form-group">
                            <label>Prix</label>
                            <input type="text" class="form-control mb-2" placeholder="CHXX XXXX XXXX XXXX XXXX X" value="{{prix}}">
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>

            {{#with adresse_habitation}}
                <div class="col-md-6 mt-3">
                    <div class="card" data-id="{{id}}">
                        <div class="card-header">
                            Adresse d'habitation courante
                        </div>
                        <div class="card-body">
                            <label >Adresse</label>
                            <input type="text" class="form-control mb-2" placeholder="Ligne 1" value="{{ligne1}}">
                            <input type="text" class="form-control mb-2" placeholder="Ligne 2" value="{{ligne2}}">
                            <input type="text" class="form-control mb-2" placeholder="Ligne 3" value="{{ligne3}}">
                            <label >Villa</label>
                            <input type="text" class="form-control mb-2" placeholder="Ville" value="{{ville}}">
                            <label >NPA</label>
                            <input type="text" class="form-control mb-2" placeholder="NPA" value="{{npa}}">
                        </div>
                    </div>
                </div>
            {{/with}}
        </div>
    </div>

    <div class="tab-pane fade mt-3" id="comp" role="tabpanel" aria-labelledby="comp-tab">

        <div class="row my-3">
            <div class="col-12">
                <ul class="list-group">
                    {{#each sujets}}
                        <li class="list-group-item" data-id="{{id}}">{{nom}}</li>
                        {{#each matieres}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="{{selected}}" data-id="{{id}}" id="sujet">
                                <label class="form-check-label" for="sujet">
                                    {{nom}}
                                </label>
                            </div>
                        {{/each}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>


